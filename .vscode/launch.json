{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Generate black and white image",
      "type": "python",
      "request": "launch",
      "program": "main.py",
      "console": "integratedTerminal",
      "args": [
        "80", // BOARD_WIDTH
        "0.1", // PIXEL_WIDTH
        "0.5", // LINE_TRANSPARENCY
        "300", // NUM_NAILS
        "2000" // MAX_ITERATIONS
      ]
    },
    {
      "name": "Generate color image",
      "type": "python",
      "request": "launch",
      "program": "color.py",
      "console": "integratedTerminal",
      "justMyCode": false,
      "args": [
        "image.png",  // INPUT_IMAGE
        "5",          // NUM_COLORS
        "80",         // BOARD_WIDTH, in cm
        "0.1",        // PIXEL_WIDTH
        "1",          // LINE_TRANSPARENCY
        "300",        // NUM_NAILS
        "2000",       // MAX_ITERATIONS
        "1"
      ]
    }
  ]
}